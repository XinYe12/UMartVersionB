{{ 'tm-logo-bar.css' | asset_url | stylesheet_tag }}
<div class="tm-logo">
  <div class="page-width page-width-desktop">
    {% if section.blocks.size > 0 %}
      <ul class="logo-bar owl-carousel">
        {% for block in section.blocks %}
        
        {% if block.settings.image != blank %}
          <li class="logo-bar__item">
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="logo-bar__link">
            {% endif %}
            
              {{ block.settings.image | img_url: 'master', scale: 2 | img_tag: block.settings.image.alt, 'logo-bar__image' }}
            
            {% if block.settings.link != blank %}
              </a>
            {% endif %}
          </li>
        {% else %}
              {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
        
        {% endfor %}
      </ul>
    {% endif %}
    {% if section.blocks.size == 0 %}
      {% include 'no-blocks' %}
    {% endif %}
  </div>
</div>

<script>
  $(document).ready(function() {
    $('.logo-bar').owlCarousel({
      loop: !0,
      nav: !1,
      dots: !1,
      autoplay: !0,
      responsive:{
        0:{
          items:1
        },
        380:{
          items:1
        },
        381:{
          items:2
        },
        600:{
          items:3
        },
        750:{
          items:3
        },
        990:{
          items:4
        },
        1249:{
          items:5
        },
        1499:{
          items:6
        }
    }
    })
   
});
</script>

{% schema %}
{
  "name": "t:sections.Tm-logo-bar.name",
  "tag": "section",
  "class": "brand-section spaced-section",
  "max_blocks": 20,
  "blocks": [
    {
      "type": "logo_image",
      "name": "t:sections.Tm-logo-bar.blocks.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.Tm-logo-bar.blocks.settings.image.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.Tm-logo-bar.blocks.settings.link.label",
          "info": "t:sections.Tm-logo-bar.blocks.settings.link.info"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.Tm-logo-bar.presets.name",
      "category": "t:sections.Tm-logo-bar.presets.category"
    }
  ]
}
{% endschema %}
